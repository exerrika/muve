    <string>This app may need microphone access for audio session management.</string>
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>
    <key>AVAudioSessionCategoryOptions</key>
    <array>
        <string>AVAudioSessionCategoryOptionAllowBluetooth</string>
        <string>AVAudioSessionCategoryOptionAllowBluetoothA2DP</string>
        <string>AVAudioSessionCategoryOptionAllowAirPlay</string>
    </array>
</dict>
</plist>